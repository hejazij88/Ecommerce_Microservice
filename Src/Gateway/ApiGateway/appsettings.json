{
  "ReverseProxy": {
    "Routes": {
      "catalog_route": {
        "ClusterId": "catalog_cluster",
        "Match": { "Path": "/catalog/{**catch-all}" },
        "AuthorizationPolicy": "AdminOnly"

      },
      "basket_route": {
        "ClusterId": "basket_cluster",
        "Match": { "Path": "/basket/{**catch-all}" },
        "AuthorizationPolicy": "default"

      },
      "ordering_route": {
        "ClusterId": "ordering_cluster",
        "Match": { "Path": "/ordering/{**catch-all}" },
        "AuthorizationPolicy": "default"

      }
    },
    "Clusters": {
      "catalog_cluster": {
        "Destinations": {
          "catalog_api": { "Address": "http://catalog.api:80/" }
        }
      },
      "basket_cluster": {
        "Destinations": {
          "basket_api": { "Address": "http://basket.api:80/" }
        }
      },
      "ordering_cluster": {
        "Destinations": {
          "ordering_api": { "Address": "http://ordering.api:80/" }
        }
      }
    }
  }
}
